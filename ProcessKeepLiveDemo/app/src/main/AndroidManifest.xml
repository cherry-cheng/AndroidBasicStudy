<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyh.processkeeplivedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.KeepActivity"
            android:excludeFromRecents="true"
            android:theme="@style/keepTheme"
            android:taskAffinity="com.cyh.processkeeplivedemo"/>
        <service android:name=".service.ForegroundService"/>
        <service android:name=".service.ForegroundService$InnerService"/>

        <service android:name=".service.LocalService"/>
        <service android:name=".service.RemoteService"
            android:process=":remote"/>
    </application>

</manifest>